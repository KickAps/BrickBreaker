{% extends 'base.html.twig' %}

{% block body %}

    <div><h1>BRICK BREAKER</h1></div>
    <style> body {padding: 0; margin: 0;} canvas {vertical-align: top;} </style>

    {# {{bricks|json_encode|raw}} #}

    <!-- Trigger the modal with a button -->
    <button type="button" class="btn btn-default" id="button-scores">Scores</button>

    <!-- Modal -->
    <div class="modal fade" id="modal-scores" role="dialog">
      <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Scores</h4>
          </div>
          <div class="modal-body">

            <div id="menu">
                <ul>
                    <li><a>No Score</a></li>
                </ul>
            </div>

          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
          </div>
        </div>

      </div>
    </div>

{% endblock %}

{% block javascripts %}

    {{ parent() }}

    <script src="{{asset('js/libraries/jquery-1.8.2.min.js') }}" type="text/javascript"></script>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

    <script>
        $(document).ready(function(){
            $("#button-scores").click(function(){
                $("#modal-scores").modal();
            });
        });
    </script>

    <script src="{{asset('js/libraries/p5.js') }}" type="text/javascript"></script>
    <script src="{{asset('js/libraries/p5.dom.js') }}" type="text/javascript"></script>
    <script src="{{asset('js/libraries/p5.sound.js') }}" type="text/javascript"></script>

    <script src="{{asset('js/sketch.js') }}" nbSchema = {{ nbSchema }} type="text/javascript"></script>
    <script src="{{asset('js/tools.js') }}" type="text/javascript"></script>
    <script src="{{asset('js/Ball.js') }}" type="text/javascript"></script>
    <script src="{{asset('js/Player.js') }}" type="text/javascript"></script>
    <script src="{{asset('js/Brick.js') }}" type="text/javascript"></script>

    <div class="class-bricks" data-bricks="{{bricks|json_encode}}"></div>

{% endblock %}

{% block stylesheets %}

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

    <style>
        body { background: #F5F5F5; font: 18px/1.5 sans-serif;
                margin: 0; display: flex; flex-direction: column; justify-content: center; align-items: center;}
        h1, h2 { line-height: 1.2; margin: 0 0 .5em; }
        h1 { font-size: 36px; }
        h2 { font-size: 21px; margin-bottom: 0; margin-top: 1em; text-align: center}
        p { margin: 0 0 1em 0; }
        a { color: #0000F0; }
        a:hover { text-decoration: none; }
        code { background: #F5F5F5; max-width: 100px; padding: 2px 6px; word-wrap: break-word; }
        #wrapper { background: #FFF; margin: 1em auto; max-width: 800px; width: 95%; }
        #container { padding: 2em; }
        #welcome, #status { margin-bottom: 2em; }
        #welcome h1 span { display: block; font-size: 75%; }
        #icon-status, #icon-book { float: left; height: 64px; margin-right: 1em; margin-top: -4px; width: 64px; }
        #icon-book { display: none; }

        @media (min-width: 768px) {
            #wrapper { width: 80%; margin: 2em auto; }
            #icon-book { display: inline-block; }
            #status a, #next a { display: block; }
            
            @-webkit-keyframes fade-in { 0% { opacity: 0; } 100% { opacity: 1; } }
            @keyframes fade-in { 0% { opacity: 0; } 100% { opacity: 1; } }
            .sf-toolbar { opacity: 0; -webkit-animation: fade-in 1s .2s forwards; animation: fade-in 1s .2s forwards;}
        }
    </style>

{% endblock %}